<core:FragmentDefinition
   xmlns="sap.m"
	 xmlns:f="sap.ui.layout.form"
   xmlns:core="sap.ui.core">
   <Dialog
      id="ComponentsToClosingDialog"
      contentHeight="60%"
      contentWidth="90%"
      beforeOpen=""
      resizable="false"
      type="Message"
      state="None"
      icon="sap-icon://it-host"
      title="{i18n>CloseTitle}">
      <content>
      	<Table id="ComponentsToClosingDialogTableId"
          items="{
            path: 'SelectedComponentsToClosing>/'
          }">
          <columns>
                <Column>
                    <Text text="{i18n>CprodOrd}"/>
                </Column>
                <Column>
                    <Text text="{i18n>plant}"/>
                </Column>
                <Column>
                    <Text text="{i18n>material}"/>
                </Column>
                <Column>
                    <Text text="{i18n>batch}"/>
                </Column>
                <Column>
                    <Text text="{i18n>quantity}"/>
                </Column>
                <Column id="lgort1_ID">
                    <Text text="{i18n>lgort1}"/>
                </Column>
                <Column>
                  <Text text="{i18n>rechargeStockFlag}"/>
                </Column>
            </columns>
          <items>
            <ColumnListItem vAlign="Middle">
              <cells>
                <Input 
                  value="{SelectedComponentsToClosing>CprodOrd}" editable="false" />
                <Input 
                  value="{SelectedComponentsToClosing>Plant}" editable="false" />
                <Input 
                  value="{SelectedComponentsToClosing>Material}" editable="false" />
                <Input 
                  value="{SelectedComponentsToClosing>Batch}" editable="false" />
                <Input 
                  value="{SelectedComponentsToClosing>TotalConfdQtyForATPInBaseUoM}" description="{BaseUnit}" editable="false" />
                <Input 
                  value="{SelectedComponentsToClosing>StorageLocation}" editable="false" />
                  <CheckBox id="checkboxRechargeStockMasterId" selected="{SelectedComponentsToClosing>selectedCheckboxRecharge}" enabled="{editableCheckboxRecharge}" ></CheckBox>
              </cells>
            </ColumnListItem>
          </items>
        </Table>
      </content>
      <beginButton>
        <Button 
          id="CloseComponentsToClosingDialogDialogButton" 
          type="Emphasized"
          width="47.5%"
          icon="sap-icon://decline"
          press=".onCloseComponentsToClosingDialogDialog"
          text="{i18n>Close}"/>
        </beginButton>
        <endButton>
        <Button 
          id="ConfirmComponentsToClosingDialogDialogButton" 
          type="Accept"
          width="47.5%"
          icon="sap-icon://accept"
          press=".onConfirmComponentsToClosingDialogDialog"
          text="{i18n>Create}"/>
      </endButton>
      </Dialog>
</core:FragmentDefinition>