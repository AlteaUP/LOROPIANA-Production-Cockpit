<core:FragmentDefinition
   xmlns="sap.m"
	 xmlns:f="sap.ui.layout.form"
   xmlns:core="sap.ui.core">
   <Dialog
      id="ReplacementCompCombinedDialog"
      contentHeight="60%"
      contentWidth="90%"
      beforeOpen=".clearFields"
      resizable="false"
      type="Message"
      state="None"
      icon="sap-icon://it-host"
      title="{i18n>replacementComp}">
      <content>
      	<Table id="ReplacementCompCombinedTableId"
          items="{
            path: '/SelectedComponentsCombined'
          }">
          <columns>
                <Column>
                    <Text text="{i18n>CprodOrd}"/>
                </Column>
                <Column>
                    <Text text="{i18n>plant}"/>
                </Column>
                <Column>
                    <Text text="{i18n>material}"/>
                </Column>
                <Column>
                    <Text text="{i18n>newMaterial}"/>
                </Column>
                <Column>
                    <Text text="{i18n>batch}"/>
                </Column>
                <Column>
                    <Text text="{i18n>ManufacturingOrderOperation}"/>
                </Column>
                <Column>
                    <Text text="{i18n>quantity}"/>
                </Column>
                <Column id="lgort1ID">
                    <Text text="{i18n>lgort1}"/>
                </Column>
                <Column id="reasonID">
                    <Text text="{i18n>reason}"/>
                </Column>
                <Column id="noteID">
                    <Text text="{i18n>note}"/>
                </Column> 
                <Column id="checkboxRecharge_ID">
                  <Text text="{i18n>rechargeStockFlag}"/>
                </Column>               
            </columns>
          <items>
            <ColumnListItem vAlign="Middle">
              <cells>
                <Input 
                  value="{CprodOrd}" editable="false" />
                <Input 
                  value="{Plant}" editable="false" />
                <Input 
                  value="{Material}" editable="false" />
                <Input 
                  value="{NewMaterial}" editable="true" />
                <Input 
                  value="{Batch}" editable="true" />
                <Input 
                  value="{ManufacturingOrderOperation}" editable="true" />
                <Input 
                  value="{TotalConfdQtyForATPInBaseUoM}" description="{BaseUnit}" />
                <Input 
                  value="{StorageLocation}" editable="true" />
                <Select id="reasonSelectId"
                    forceSelection="true"
                    change=".onReasonChange"
                    width="100%"
                    items="{
                        path: 'reasonServiceCombined>/ReasonSet',
                        sorter: { path: 'Reason' }
                    }">
                    <core:Item id="_IDGenItem6" key="{reasonServiceCombined>SAP_UUID}" text="{reasonServiceCombined>Reason} - {reasonServiceCombined>Note}" />
                </Select>
                <Input 
                  value="{Note}" editable="true" />
                 <CheckBox id="checkboxRechargeStockCompMasterId" visible="{visibleCheckboxRecharge}" selected="{selectedCheckboxRecharge}" enabled="{editableCheckboxRecharge}" ></CheckBox>
              </cells>
            </ColumnListItem>
          </items>
        </Table>
      </content>
      <beginButton>
        <Button 
          id="CloseReplacementCompCombinedDialogButton" 
          type="Emphasized"
          width="47.5%"
          icon="sap-icon://decline"
          press=".onCloseReplacementCompCombinedDialog"
          text="{i18n>Close}"/>
        </beginButton>
        <endButton>
        <Button 
          id="ConfirmReplacementCompCombinedDialogButton" 
          type="Accept"
          width="47.5%"
          icon="sap-icon://accept"
          press=".onConfirmReplacementCompCombinedDialog"
          text="{i18n>Create}"/>
      </endButton>
      </Dialog>
</core:FragmentDefinition>