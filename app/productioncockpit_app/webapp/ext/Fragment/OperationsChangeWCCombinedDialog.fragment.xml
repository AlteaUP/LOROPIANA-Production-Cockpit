<core:FragmentDefinition
   xmlns="sap.m"
	 xmlns:f="sap.ui.layout.form"
   xmlns:core="sap.ui.core">
   <Dialog
      id="OperationsChangeWCCombinedDialog"
      contentHeight="60%"
      contentWidth="90%"
      beforeOpen=".clearFields"
      resizable="false"
      type="Message"
      state="None"
      icon="sap-icon://it-host"
      title="{i18n>changeWCCombined}">
      <content>
      	<Table id="OperationsChangeWCCombinedTableId"
          items="{
            path: '/SelectedOperationsChangeWCCombined'
          }">
          <columns>
                <Column>
                    <Text text="{i18n>CprodOrd}"/>
                </Column>
                <Column>
                    <Text text="{i18n>MaterialGroup}"/>
                </Column>
                <Column>
                    <Text text="{i18n>ManufacturingOrderOperation}"/>
                </Column>
                <Column>
                    <Text text="{i18n>MfgOrderOperationText}"/>
                </Column>
                <Column>
                    <Text text="{i18n>Supplier}"/>
                </Column>
                <Column>
                    <Text text="{i18n>WorkCenter}"/>
                </Column>
                <Column>
                    <Text text="{i18n>WorkCenterDesc}"/>
                </Column>
            </columns>
          <items>
            <ColumnListItem vAlign="Middle">
              <cells>
                <Input 
                  value="{CprodOrd}" editable="false" />
                <Input 
                  value="{MaterialGroup}" editable="false" />
                <Input 
                  value="{ManufacturingOrderOperation}" editable="false" />
                <Input 
                  value="{MfgOrderOperationText}" editable="false"/>
                <Input 
                  value="{Supplier}" editable="false"/>
                <Input 
                  value="{WorkCenter}" valueHelpRequest=".onValueHelpRequestWorkCenters" showValueHelp="true"/>
                <Input 
                  value="{WorkCenterInternalID_1_Text}" editable="false"/>
              </cells>
            </ColumnListItem>
          </items>
        </Table>
      </content>
      <beginButton>
        <Button 
          id="CloseOperationsCombinedDialogButton" 
          type="Emphasized"
          width="47.5%"
          icon="sap-icon://decline"
          press=".onCloseOperationsChangeWCCombinedDialog"
          text="{i18n>Close}"/>
        </beginButton>
        <endButton>
        <Button 
          id="ConfirmOperationsCombinedDialogButton" 
          type="Accept"
          width="47.5%"
          icon="sap-icon://accept"
          press=".onConfirmReplacementCompCombinedDialog"
          text="{i18n>Create}"/>
      </endButton>
      </Dialog>
</core:FragmentDefinition>